<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appcolor">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:weightSum="6.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:padding="@dimen/_25sdp"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/home_buttons_color"
            android:gravity="center"
            android:text="Choose a Quiz"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:drawableRight="@drawable/ic_programing"
            />

    <Button
        android:textColor="@color/home_buttons_color"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/buttons"
        android:id="@+id/java_b"
        android:padding="@dimen/_40sdp"
        android:drawableLeft="@drawable/ic_java"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Java Quiz"
        android:textSize="@dimen/_20ssp"
        android:textAllCaps="false"/>

    <Button
        android:textColor="@color/home_buttons_color"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/buttons"
        android:id="@+id/python_b"
        android:padding="@dimen/_40sdp"
        android:drawableRight="@drawable/ic_python"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Python Quiz"
        android:textSize="@dimen/_20ssp"
        android:textAllCaps="false"/>

    <Button
        android:textColor="@color/home_buttons_color"
        android:id="@+id/php_b"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/buttons"
        android:padding="@dimen/_40sdp"
        android:drawableLeft="@drawable/ic_php__1_"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="PHP Quiz"
        android:textSize="@dimen/_20ssp"
        android:textAllCaps="false"/>

        <Button
            android:textColor="@color/home_buttons_color"
            android:id="@+id/cxx_b"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/buttons"
            android:padding="@dimen/_40sdp"
            android:drawableRight="@drawable/ic_c"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="C++ Quiz"
            android:textSize="@dimen/_20ssp"
            android:textAllCaps="false"/>


        <Button
            android:textColor="@color/home_buttons_color"
            android:id="@+id/c_hastag_b"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/buttons"
            android:padding="@dimen/_40sdp"
            android:drawableLeft="@drawable/ic_hashtag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="C# Quiz"
            android:textSize="@dimen/_20ssp"
            android:textAllCaps="false"/>

        <Button
            android:textColor="@color/home_buttons_color"
            android:id="@+id/java_script_button"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/buttons"
            android:padding="@dimen/_40sdp"
            android:drawableRight="@drawable/ic_javascript_logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Javascript Quiz"
            android:textSize="@dimen/_20ssp"
            android:textAllCaps="false"/>


    </LinearLayout>
    </ScrollView>

</LinearLayout>



